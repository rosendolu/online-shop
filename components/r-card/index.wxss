.card {
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0px 8px 16px 0px #e5e5e573;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
  margin-bottom: 32rpx;
}

.poster {
  width: 200rpx;
  height: 200rpx;
  /* border-radius: 8rpx; */
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  overflow: hidden;
  background: #f7f8fa;
}
.right {
  flex: 1;
  padding-left: 16rpx;
  align-items: center;
  display: grid;
}
.text {
  font-size: 28rpx;
  color: #333;
  text-align: left;
  overflow: hidden;
}
.btn_pay:active {
  transform: scale(1.3);
  transition: transfrom 0.3s ease-out;
}
.btn_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn_pay {
  margin-right: 16rpx;
  /* border-radius: 16rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  /* color: #fff; */
  font-size: 26rpx;
  /* padding: 0 16rpx; */
  /* background: linear-gradient(to right, rgb(255, 96, 52), rgb(238, 10, 36)); */
  text-align: center;
}
.price,
.price_origin {
  line-height: 1.5;
}
.price {
  color: #ee0a24;
  /* padding: 0 8rpx; */
  font-size: 26rpx;
}
.price_origin {
  margin-left: 8rpx;
  color: #aaabb3;
  text-decoration: line-through;
  text-decoration-style: 1px solid #aaabb3;
}
.tagbox {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.tagbox .item {
  margin-right: 16rpx;
  /* margin-bottom: 16rpx; */
}
