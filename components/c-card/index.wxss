.card {
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0px 8px 16px 0px rgba(229, 229, 229, 0.45);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  /* padding: 10rpx; */
  padding-bottom: 16rpx;
  width: 100%;
}
.poster {
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx;
}
.text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: left;
  overflow: hidden;
  padding: 0 8rpx;
  padding-top: 8rpx;
}
.btn_pay {
  /* border-radius: 16rpx; */
  display: flex;
  align-items: center;
  color: var(--btn_pri_txt_color);
  font-size: 26rpx;
  /* padding: 0 16rpx; */
  line-height: 2;
  font-weight: 700;
  /* background: linear-gradient(to right, rgb(255, 96, 52), rgb(238, 10, 36)); */
}
.btn_pay:active {
  transform: scale(1.3);
  transition: transfrom 0.3s ease-out;
}
.price {
  color: #ee0a24;
  /* padding: 0 8rpx; */
  font-size: 26rpx;
}
.price_origin {
  margin-left: 8rpx;
  color: #aaabb3;
  text-decoration: line-through;
  text-decoration-style: 1px solid #aaabb3;
}
.btn_box {
  padding: 0 8rpx;
  display: flex;
  justify-content: space-between;
}
