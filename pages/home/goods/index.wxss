page {
  background: #f8f8f8;
  /* margin-bottom: 100rpx; */
}
.swiper {
  background: #fff;
  width: 100%;
  height: 688rpx;
}
.swiper_item {
  width: 100%;
  height: 100%;
}

.body {
  padding: 16rpx;
  background: #fff;
}
.body .title {
  color: #000;
  font-size: 32rpx;
  line-height: 1.5;
}
.body .intro {
  padding-top: 32rpx;
  color: #666;
  line-height: 1.5;
  font-size: 28rpx;
}
.price {
  line-height: 1.5;
}
.price_current {
  color: #ee0a24;
  font-size: 32rpx;
}
.price_original {
  text-decoration: line-through;
  font-size: 24rpx;
  color: #00000080;
}
.contact {
  position: relative;
}
.btn_contact {
  position: absolute;
  background: transparent;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.weui-cell .weui-cell__bd {
  flex-grow: 0;
  white-space: nowrap;
}
.weui-cell .weui-cell__ft {
  text-align: left;
}
.blank {
  height: 100rpx;
}
