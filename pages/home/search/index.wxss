.latest,
.hot {
  color: #323233;
  font-size: 24rpx;
  line-height: 2;
}

.latest_body,
.hot_body {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.body {
  padding: 16rpx;
  position: relative;
}
.tag {
  color: #676d6a;
  padding: 8rpx 16rpx;
  background: #f0f2f5;
  font-size: 22rpx;
  margin-right: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.scroll_box {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}
.scroll_el {
  border-radius: 8rpx;
  padding: 0 16rpx;
}
.scroll_el_txt {
  text-align: center;
}
.list {
  background: #fff;
  transform: translateX(0);
}

.inactive {
  position: absolute;
  top: 0;
  transform: translateX(100%);
  /* transition: transfrom 0.2s ease-out; */
}
