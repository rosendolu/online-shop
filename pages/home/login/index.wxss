.bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  /* url('https://857client.oss-cn-hangzhou.aliyuncs.com/static/login_bg.jpg'); */
  background: no-repeat left center/ auto 100vh
    url('https://857client.oss-cn-hangzhou.aliyuncs.com/static/bg_2.jpg');
  z-index: -1;
  width: 100%;
  height: 100%;
  animation: slide 4s linear infinite alternate;
}
@keyframes slide {
  0% {
    background-position-x: left;
  }
  100% {
    background-position-x: right;
  }
}
.body {
  box-sizing: border-box;
  /* padding: 32rpx; */
  position: absolute;
  top: 60%;
  left: 0;
  right: 0;
  transform: translateY(-50);
  margin: 0 auto;
  text-align: center;
}
.logo {
  width: 600rpx;
  height: 600rpx;
}
.inputbox {
  margin: 0 32rpx;
  display: flex;

  align-items: center;
  border-bottom: 1px solid rgba(255, 255, 255, 0.5);
}
